<section>
  <h1>プロフィール編集</h1>
  <%# XXXを書き換える %>
  <%= form_with model: @user, method: :patch, local:true do |f| %>
    <div class="name-form">
      <label for="inputName">Name</label> 
      <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
    </div>
    <div class="profile_image-form">
      <label for="inputImage">ProfiileImage</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <%= f.submit '変更を保存' %>
  <% end %>
</section>

 