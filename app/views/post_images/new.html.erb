<section>
  <h1>画像投稿フォーム</h1>
  <% if @post_image.errors.any? %>
    <%= @post_image.errors.count %>件のエラーが発生しました
    <ul>
      <% @post_imag.errors.full_messages.each do |message| %>
        <li class=""><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @post_image, local:true do |f| %>
    <div class="image-form">
      <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*"%>
    </div>
    <div class="shop_name-form">
      <h4>ショップ名</h4>
        <%= f.text_area :shop_name %>
    </div>
    <div class="caption-form">
      <h4>説明</h4>
        <%= f.text_area :caption %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
</section>

  